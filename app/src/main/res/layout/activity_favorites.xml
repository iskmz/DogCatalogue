<RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back_other"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <ProgressBar
        android:id="@+id/progressFavs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:theme="@style/progressBarOrange"
        />

    <GridView
        android:id="@+id/lstFavImgs"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_above="@id/btnBackToMain_fromFavs"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:numColumns="3"
        android:visibility="visible"
        />

    <RelativeLayout
        android:id="@+id/laySingleImgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_above="@id/btnBackToMain_fromFavs"
        android:layout_marginBottom="20dp"
        android:padding="16dp"
        android:visibility="gone"
        >


                            <ImageButton
                                android:id="@+id/btnPreviousImg"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/ic_navigate_previous"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentStart="true"
                                />

                            <ImageView
                                android:id="@+id/imgSingleView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:layout_above="@id/btnPreviousImg"
                                android:scaleType="centerInside"
                                />

                            <ImageButton
                                android:id="@+id/btnNextImg"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/ic_navigate_next"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                />



    </RelativeLayout>



    <ImageButton
        android:id="@+id/btnBackToMain_fromFavs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_arrow_back"
        />


    <ImageButton
        android:id="@+id/btnRefreshFavs"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_refresh"
        />

    <ImageButton
        android:id="@+id/btnChangeView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_eye"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
    />

</RelativeLayout>